	<body>
		<h1>내가 next.jsp이다.</h1>
		<%
			for(int i=1; i<7; i++){
		%>		
				<h<%=i %>>나는 h<%=i %>이다!!!</h<%=i %>>
		<%
			out.print("<h"+i+">저는 h"+i+"입니다.</h"+i+">");
			}
		%>
		
		<% out.print("<h1 style='color:red'>"+"색상이 변동</h1>");
			out.print("<h1 style='color:yellow>'"+"색상이 변동</h1>");
			out.print("<h1 style='color:blue>"+"색상이 변동</h1>");
			out.print("<h1 style='color:skyblue>"+"색상이 변동</h1>");
			out.print("<h1 style='color:green>"+"색상이 변동</h1>");
			out.print("<h1 style='color:green>"+"색상이 변동</h1>");
			out.print("<h1 style='color:purple>"+"색상이 변동</h1>");
			
			/*
			switch(변수){}
			if(조건){}
			*/
		%>
	</body>
