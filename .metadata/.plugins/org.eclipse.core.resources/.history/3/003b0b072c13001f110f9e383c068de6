<%@ page language="java" contentType="text/html; charset=utf-8"
    pageEncoding="utf-8"%>
<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<title>for문의 사용예시</title>
		<style>
		</style>
	</head>
	<body>
		<h1>내가 next.jsp이다.</h1>
		<%
			for(int i=1; i<7; i++){
		%>		
				<h<%=i %>>나는 h<%=i %>이다!!!</h<%=i %>>
		<%
			out.print("<h"+i+">저는 h"+i+"입니다.</h"+i+">");
			}
		%>
		
		<% 
			String color="";
			for(int i=0; i<=6; i++){
				switch(i){
				case 0:color="red";
				case 1:color="yellow";
				case 2:color="orange";
				case 3:color="green";
				case 4:color="blue";
				case 5:color="navy";
				case 6:color="skyblue";
				case 7:color="purple";
				}
			out.print("<h1 style='color:red'>"+"색상이 변동</h1>");
		
		}
			
			
			/*
			switch(변수){}
			if(조건){}
			*/
		%>
	</body>
</html>