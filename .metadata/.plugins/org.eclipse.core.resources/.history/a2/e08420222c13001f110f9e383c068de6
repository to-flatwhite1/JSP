		<h1>내가 next.jsp이다.</h1>
		<%
			for(int i=1; i<7; i++){
		%>		
				<h<%=i %>>나는 h<%=i %>이다!!!</h<%=i %>>
		<%
			out.print("<h"+i+">저는 h"+i+"입니다.</h"+i+">");
			}
		%>
		
		<% 
			String color="";
			for(int i=0; i<=6; i++){
				switch(i){
				case 0:color="red";
					break;
				case 1:color="yellow";
					break;
				case 2:color="orange";
					break;
				case 3:color="green";
					break;
				case 4:color="blue";
					break;
				case 5:color="navy";
					break;
				case 6:color="skyblue";
					break;
				case 7:color="purple";
					break;
				}
			%><h1 style='color:<%=color %>;">색상이 변동</h1><%
			
			}%>
		

			
			
			<!--switch(변수){}if(조건){}  !-->
			
	
	
	</body>
